  "version": "0.2.0",
  "configurations": [
    {
      "name": "Boids",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/SFMLSandbox",
      "args":[
        "--game_mode", "Boids",
        "--frames_per_second", "120",
        "--updates_per_second", "60",
      ],
      "cwd": "${workspaceFolder}/build/bin",
      "showDisplayString": true
    },
    {
      "name": "Orbito",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/SFMLSandbox",
      "args":[
        "--game_mode", "Orbito",
      ],
      "cwd": "${workspaceFolder}/build/bin",
      "showDisplayString": true
    },
    {
      "name": "Game Of Life",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/SFMLSandbox",
      "args":[
        "--game_mode", "GameOfLife",
        "--frames_per_second", "120",
        "--updates_per_second", "30",
      ],
      "cwd": "${workspaceFolder}/build/bin",
      "showDisplayString": true
    },
    {
      "name": "Quad Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/SFMLSandbox",
      "args": [
        "--game_mode", "QuadTest",
        "--frames_per_second", "30"
      ],
      "cwd": "${workspaceFolder}/build/bin",
      "showDisplayString": true
    }
  ]
}